%nav.navbar.navbar-default
  .container
    .navbar-header
      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'favicon.ico'
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            = link_to '#', data: { toggle: 'dropdown' } do
              = image_tag current_user.gravatar_url(size: 18)
              .caret
            %ul.dropdown-menu
              %li= link_to current_user.email
              %li= link_to 'logout', destroy_user_session_path, method: :delete
        - else
          %li= link_to t('devise.shared.links.sign_in'), new_user_session_path
          %li= link_to t('devise.shared.links.sign_up'), new_user_registration_path
